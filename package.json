{
  "name": "now-note",
  "version": "0.0.13-alpha",
  "description": "Notes and tasks",
  "main": ".webpack/main",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron-forge start --inspect-electron",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "now-note",
    "mac": {
      "category": "Notes and Tasks App"
    }
  },
  "author": "new333333",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.18.13",
    "@babel/preset-react": "^7.18.6",
    "@electron-forge/cli": "^6.0.0-beta.64",
    "@electron-forge/maker-deb": "^6.0.0-beta.64",
    "@electron-forge/maker-rpm": "^6.0.0-beta.64",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.64",
    "@electron-forge/maker-zip": "^6.0.0-beta.64",
    "@electron-forge/plugin-webpack": "^6.0.0-beta.65",
    "@vercel/webpack-asset-relocator-loader": "^1.7.3",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "electron": "^19.0.6",
    "electron-builder": "^23.6.0",
    "electron-packager": "^15.5.1",
    "electron-reloader": "^1.2.3",
    "less": "^4.1.3",
    "less-loader": "^11.1.0",
    "node-loader": "^2.0.0",
    "raw-loader": "^4.0.2",
    "style-loader": "^3.3.1"
  },
  "dependencies": {
    "@ant-design/icons": "^4.8.0",
    "@tinymce/tinymce-react": "^4.2.0",
    "antd": "^5.0.6",
    "cheerio": "^1.0.0-rc.12",
    "date-fns": "^2.29.3",
    "dayjs": "^1.11.5",
    "electron-log": "^4.4.8",
    "electron-squirrel-startup": "^1.0.0",
    "fs-extra": "^10.1.0",
    "jquery": "^3.6.1",
    "jquery-contextmenu": "^2.9.2",
    "jquery.fancytree": "^2.38.2",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-infinite-scroll-component": "^6.1.0",
    "react-reflex": "^4.0.9",
    "sequelize": "^6.21.3",
    "sqlite3": "^5.1.2"
  },
  "config": {
    "forge": {
      "packagerConfig": {},
      "electronWebpack": {
        "renderer": {
          "webpackConfig": "webpack.renderer.additions.js"
        }
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "n3_note"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "devContentSecurityPolicy": "img-src 'self' blob: data:; default-src 'self'; script-src 'self' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; font-src 'self' data:;",
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/renderer/index.html",
                  "js": "./src/renderer/index.js",
                  "name": "main_window",
                  "preload": {
                    "js": "./src/main/preload.js"
                  }
                }
              ]
            }
          }
        ]
      ]
    }
  }
}
